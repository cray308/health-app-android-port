<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="textAllCaps">false</item>
        <item name="iconTint">@null</item>
        <item name="android:textColor">@color/label</item>
        <item name="backgroundTint">@color/secondarySystemGroupedBackground</item>
    </style>

    <style name="Theme.HealthAppAndroid" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/systemBlue</item>
        <item name="colorPrimaryVariant">@color/chartBlue</item>
        <item name="colorOnPrimary">@color/label</item>
        <item name="colorSecondary">@color/systemOrange</item>
        <item name="colorSecondaryVariant">@color/chartOrange</item>
        <item name="colorOnSecondary">@color/label</item>
        <item name="colorSurface">@color/secondarySystemBackground</item>
        <item name="android:colorBackground">@null</item>
        <item name="android:windowBackground">@color/systemGroupedBackground</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/darkGray</item>
        <item name="android:navigationBarColor">@color/darkGray</item>
    </style>
</resources>
