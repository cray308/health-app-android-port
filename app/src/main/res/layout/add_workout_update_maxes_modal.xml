<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="8dp"
    android:paddingTop="5dp"
    android:paddingRight="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2" />

        <Button
            android:id="@+id/updateMaxSubmitBtn"
            style="@style/AppButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:enabled="false"
            android:text="@string/updates_maxes_finish_text"
            android:textColor="@color/systemGray"
            android:textSize="15sp" />
    </LinearLayout>

    <view
        android:id="@+id/firstInput"
        class="com.example.healthAppAndroid.common.helpers.TextValidator$InputView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:fieldHint="@string/maxWeightSquat" />

    <view
        android:id="@+id/secondInput"
        class="com.example.healthAppAndroid.common.helpers.TextValidator$InputView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:fieldHint="@string/maxWeightPullUp" />

    <view
        android:id="@+id/thirdInput"
        class="com.example.healthAppAndroid.common.helpers.TextValidator$InputView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:fieldHint="@string/maxWeightBench" />

    <view
        android:id="@+id/fourthInput"
        class="com.example.healthAppAndroid.common.helpers.TextValidator$InputView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:fieldHint="@string/maxWeightDeadLift" />
</LinearLayout>
