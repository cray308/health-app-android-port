<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homeTab.view.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/systemGroupedBackground"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/greetingLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/label"
                android:textSize="28sp" />

            <LinearLayout
                android:id="@+id/weeklyWorkoutsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/weeklyWorkoutsHeader"
                    android:textColor="@color/label"
                    android:textSize="22sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/separator" />

                <LinearLayout
                    android:id="@+id/weeklyWorkoutsStack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/customWorkoutStack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/separator" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/customWorkoutsHeader"
                    android:textColor="@color/label"
                    android:textSize="22sp" />

                <com.example.healthAppAndroid.common.views.StatusButton
                    android:id="@+id/customButton1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:buttonLabel="@string/workoutTypeTestMax"
                    app:hideCheckbox="true"
                    app:hideHeader="true" />

                <com.example.healthAppAndroid.common.views.StatusButton
                    android:id="@+id/customButton2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:buttonLabel="@string/workoutTypeEndurance"
                    app:hideCheckbox="true"
                    app:hideHeader="true" />

                <com.example.healthAppAndroid.common.views.StatusButton
                    android:id="@+id/customButton3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:buttonLabel="@string/workoutTypeStrength"
                    app:hideCheckbox="true"
                    app:hideHeader="true" />

                <com.example.healthAppAndroid.common.views.StatusButton
                    android:id="@+id/customButton4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:buttonLabel="@string/workoutTypeSE"
                    app:hideCheckbox="true"
                    app:hideHeader="true" />

                <com.example.healthAppAndroid.common.views.StatusButton
                    android:id="@+id/customButton5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:buttonLabel="@string/workoutTypeHIC"
                    app:hideCheckbox="true"
                    app:hideHeader="true" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp" />

        </LinearLayout>
    </ScrollView>

    <nl.dionsegijn.konfetti.KonfettiView
        android:id="@+id/confettiView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CC8E8E8E"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
