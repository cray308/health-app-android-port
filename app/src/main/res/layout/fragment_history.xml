<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".historyTab.view.HistoryFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/systemBackground"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/rangePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checkedButton="@id/segmentLeft"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/segmentLeft"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/historySegment1"
                    android:textColor="@color/label"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/segmentCenter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/historySegment2"
                    android:textColor="@color/label"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/segmentRight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/historySegment3"
                    android:textColor="@color/label"
                    android:textSize="12sp" />
            </RadioGroup>

            <com.example.healthAppAndroid.historyTab.view.TotalWorkoutsChart
                android:id="@+id/totalWorkoutsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.example.healthAppAndroid.historyTab.view.WorkoutTypeChart
                android:id="@+id/workoutTypeContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.example.healthAppAndroid.historyTab.view.LiftingChart
                android:id="@+id/liftContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
