<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chartView"
        android:layout_width="match_parent"
        android:layout_height="350dp" />

    <LinearLayout
        android:id="@+id/legendContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.example.healthAppAndroid.historyTab.HistoryChartLegendEntry
            android:id="@+id/firstEntry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:formColor="@color/chartBlue" />

        <com.example.healthAppAndroid.historyTab.HistoryChartLegendEntry
            android:id="@+id/secondEntry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:formColor="@color/chartGreen" />

        <com.example.healthAppAndroid.historyTab.HistoryChartLegendEntry
            android:id="@+id/thirdEntry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:formColor="@color/chartOrange" />

        <com.example.healthAppAndroid.historyTab.HistoryChartLegendEntry
            android:id="@+id/fourthEntry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:formColor="@color/chartPink" />

    </LinearLayout>

</LinearLayout>
