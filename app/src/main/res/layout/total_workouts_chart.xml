<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:orientation="vertical">

    <com.example.healthAppAndroid.historyTab.view.ChartSeparator
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hideDivider="true"
        app:sepHeader="@string/chartHeaderTotalWorkouts" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chartView"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="5dp" />

    <LinearLayout
        android:id="@+id/legendContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="vertical"
        android:visibility="gone">

        <com.example.healthAppAndroid.historyTab.view.HistoryChartLegendEntry
            android:id="@+id/firstEntry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:formColor="@color/chartBlue" />

    </LinearLayout>

</LinearLayout>
